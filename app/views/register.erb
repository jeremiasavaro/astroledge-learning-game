<!DOCTYPE html>
<html lang="es">
<link rel="stylesheet" type="text/css" href="styles/register.css">
<head>
  <title>Register</title>
</head>
<body>
  <audio id="background-audio" autoplay loop>
    <source src="/astroledge.mp3" type="audio/mp3">
    Your browser does not support the audio element.
  </audio>
  <section id="sect1" class="sect">
    <video src="https://videos.pexels.com/video-files/1851190/1851190-uhd_2560_1440_25fps.mp4" autoplay="true" muted="true" loop="true"></video>
    <div class="container">
      <h2>Register</h2>
      <form method="post">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" required>
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required>
        <label for="password_rep">Repeat the password</label>
        <input type="password" id="password_rep" name="password_rep" required>
        <input type="submit" value="Register">
      </form>
      <div class = "registered" >
        <% if @passwordDist == true %>
          <p>Passwords are not the same, try again</p>
        <% end %>
        <% if @userOc == true %>
          <p>Username already registered, try another</p>
        <% end %>
        <p>Already registered?, <a href="/login">log in</a></p>
      </div>
    </div>
  </section>

  <script>
    window.addEventListener('DOMContentLoaded', (event) => {
      const audio = document.getElementById('background-audio');
      audio.volume = 0.1;

      // Retrieve the playback time from localStorage
      const savedTime = localStorage.getItem('audioTime');
      if (savedTime) {
        audio.currentTime = savedTime;
      }

      // Save the playback time periodically
      setInterval(() => {
        localStorage.setItem('audioTime', audio.currentTime);
      }, 1000);
    });
  </script>
</body>
</html>
